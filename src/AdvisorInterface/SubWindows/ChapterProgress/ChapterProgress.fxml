<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Line?>
<AnchorPane minHeight="768" minWidth="1366" prefHeight="768" prefWidth="1366" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="AdvisorInterface.SubWindows.ChapterProgress.ChapterProgress">
    <HBox fx:id="Box" alignment="CENTER" prefHeight="125" prefWidth="1366">
        <children>
            <Label fx:id="TopLabel" contentDisplay="CENTER" text="Chapter CSA Progress" />
        </children>
    </HBox>
    <Button fx:id="Back" layoutX="20" layoutY="35" text="Back" onAction="#back" />
    <HBox fx:id="v" prefHeight="500.0" prefWidth="1000.0" layoutY="184" layoutX="183" spacing="10">
        <padding>
            <Insets left="40" top="40" right="40"/>
        </padding>
        <VBox spacing="40" alignment="TOP_LEFT" prefWidth="333">
            <Label styleClass="achievementLabels" text="Number Achieved by Students" alignment="CENTER"/>
            <HBox alignment="CENTER" spacing="10">
                <Label styleClass="achievementLabels" text="CSA Achievement:"/>
                <Label styleClass="achievementLabels" fx:id="achievementNum"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Label styleClass="achievementLabels" text="CSA Service:"/>
                <Label styleClass="achievementLabels" fx:id="serviceNum"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Label styleClass="achievementLabels" text="CSA Community:"/>
                <Label styleClass="achievementLabels" fx:id="communityNum"/>
            </HBox>
        </VBox>
        <Line fill="black" startY="174" endY="574" strokeWidth="5"/>
        <VBox alignment="TOP_CENTER" spacing="40" prefWidth="333">
            <Label styleClass="achievementLabels" text="Total Chapter Progress"/>
            <HBox alignment="CENTER" spacing="10">
                <Label styleClass="achievementLabels" text="Total Hours Completed:"/>
                <Label styleClass="achievementLabels" fx:id="totalHours"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Label styleClass="achievementLabels" text="Total Participants:"/>
                <Label styleClass="achievementLabels" fx:id="totalParticipants"/>
            </HBox>
        </VBox>
        <Line fill="black" startY="174" endY="574" strokeWidth="5"/>
        <VBox spacing="40" alignment="TOP_RIGHT" prefWidth="333">
            <HBox alignment="CENTER">
                <Label styleClass="achievementLabels" text="Top 3 Students" alignment="CENTER"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <Label text="1:" styleClass="achievementLabels"/>
                <Label fx:id="firstStudent" styleClass="achievementLabels"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <Label text="2:" styleClass="achievementLabels"/>
                <Label fx:id="secondStudent" styleClass="achievementLabels"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <Label text="3:" styleClass="achievementLabels"/>
                <Label fx:id="thirdStudent" styleClass="achievementLabels"/>
            </HBox>
        </VBox>
    </HBox>

    <stylesheets>
        <URL value="@../../Advisor.css" />
    </stylesheets>
</AnchorPane>